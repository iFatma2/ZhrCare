@model IEnumerable<ZhrCare.Models.MemoryRecord>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #6c5ce7; font-weight: bold;"><i class="bi bi-journal-album"></i> Memory Gallery: @ViewBag.PatientName</h2>
        <a asp-action="Create" asp-route-patientId="@ViewBag.PatientId" class="btn text-white px-4" style="background-color: #6c5ce7; border-radius: 10px;">
            <i class="bi bi-plus-lg"></i> Add New Memory
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center p-5 border rounded bg-light">
            <p class="text-muted">No memories recorded yet. Start by uploading a photo or voice message.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0" style="border-radius: 15px; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="~/uploads/images/@item.ImagePath" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        }
                        <div class="card-body">
                            <p class="card-text fw-bold">@item.Caption</p>
                            @if (!string.IsNullOrEmpty(item.AudioPath))
                            {
                                <div class="mt-3">
                                    <label class="small text-muted d-block mb-1"><i class="bi bi-mic"></i> Voice Note:</label>
                                    <audio controls class="w-100" style="height: 35px;">
                                        <source src="~/uploads/audio/@item.AudioPath" type="audio/mpeg">
                                    </audio>
                                </div>
                            }
                        </div>
                        
                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center pb-3">
                            <small class="text-muted">@item.CreatedAt.ToShortDateString()</small>
                        </div>
                        
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-around pb-3 px-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #6c5ce7; background-color: #f1f0ff; border-radius: 8px;">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #0fbcf9; background-color: #e0f7ff; border-radius: 8px;">
                                <i class="bi bi-info-circle"></i> Info
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #ff5e57; background-color: #fff0ef; border-radius: 8px;">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                        
                    </div>
                </div>
            }
        </div>
    }
</div>