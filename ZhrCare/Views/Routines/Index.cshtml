@model IEnumerable<ZhrCare.Models.Routine>

@{
    ViewData["Title"] = "Patient Routine List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #6c5ce7; font-weight: bold;"><i class="bi bi-calendar-check"></i> Daily Routines</h2>
        <a asp-action="Create" class="btn text-white shadow-sm px-4" style="background-color: #6c5ce7; border-radius: 10px;">
            <i class="bi bi-plus-lg"></i> Add New Routine
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 p-5 text-center" style="border-radius: 15px;">
            <div class="card-body">
                <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3 text-muted">No routines scheduled yet.</h5>
                <p class="text-secondary">Keep track of daily activities like exercise or meals.</p>
                <a asp-action="Create" class="btn btn-outline-primary mt-2">Add First Routine</a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0" style="border-radius: 15px; border-top: 5px solid #6c5ce7 !important;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold" style="color: #2d3436;">@item.ActivityName</h5>
                                @if (item.IsCompleted)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">
                                        <i class="bi bi-check-circle-fill"></i> Completed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-dark border border-warning-subtle rounded-pill px-3">
                                        <i class="bi bi-clock-history"></i> Pending
                                    </span>
                                }
                            </div>
                            
                            <h6 class="card-subtitle mb-4 text-muted">
                                <i class="bi bi-person-circle"></i> Patient: @(item.Patient?.Name ?? "N/A")
                            </h6>

                            <div class="p-3 rounded mb-3" style="background-color: #f8f9fa; border-left: 4px solid #6c5ce7;">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-alarm text-primary me-2" style="font-size: 1.2rem;"></i>
                                    <div>
                                        <span class="text-uppercase small fw-bold text-secondary d-block">Scheduled Time</span>
                                        <span class="text-dark fw-bold">@item.Time.ToString("hh:mm tt")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="small text-muted border-top pt-2 mt-3">
                                <i class="bi bi-calendar-event"></i> Date: @item.Time.ToShortDateString()
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0 d-flex justify-content-around pb-3 px-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #6c5ce7; background-color: #f1f0ff; border-radius: 8px;">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #0fbcf9; background-color: #e0f7ff; border-radius: 8px;">
                                <i class="bi bi-info-circle"></i> Info
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #ff5e57; background-color: #fff0ef; border-radius: 8px;">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">