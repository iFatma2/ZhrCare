@model IEnumerable<ZhrCare.Models.Medication>

@{
    ViewData["Title"] = "Medications Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #6c5ce7;"><i class="bi bi-capsule-pill"></i> Medications Management</h2>
        <a asp-action="Create" class="btn text-white shadow-sm px-4" style="background-color: #6c5ce7; border-radius: 10px;">
            <i class="bi bi-plus-lg"></i> Add New Medication
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 p-5 text-center" style="border-radius: 15px;">
            <div class="card-body">
                <i class="bi bi-clipboard2-x text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3 text-muted">No medications found for your patients.</h5>
                <p class="text-secondary">Start by adding a new medication schedule.</p>
                <a asp-action="Create" class="btn btn-outline-primary mt-2">Add Now</a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0" style="border-radius: 15px; border-top: 5px solid #6c5ce7 !important;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold" style="color: #2d3436;">@item.Name</h5>
                                <span class="badge" style="background-color: #f1f0ff; color: #6c5ce7; border: 1px solid #6c5ce7;">
                                    @item.Dosage
                                </span>
                            </div>
                            
                            <h6 class="card-subtitle mb-3 text-muted">
                                <i class="bi bi-person-circle"></i> Patient: @item.Patient.Name
                            </h6>

                            <div class="mb-3">
                                <span class="text-uppercase small fw-bold text-secondary" style="letter-spacing: 1px;">Schedule</span>
                                <div class="p-3 rounded mt-1" style="background-color: #f8f9fa; border-left: 4px solid #6c5ce7;">
                                    <p class="mb-1 small"><strong>Frequency:</strong> @item.FrequencyType</p>
                                    @if (item.FrequencyType == "Weekly")
                                    {
                                        <p class="mb-1 small text-primary"><strong>Days:</strong> @item.SelectedDays</p>
                                    }
                                    <p class="mb-0 small"><strong>Time:</strong> @item.ScheduledTime.ToString("hh:mm tt")</p>
                                </div>
                            </div>

                            <div class="row g-0 mt-3 pt-3 border-top small text-muted">
                                <div class="col-6">
                                    <i class="bi bi-calendar2-week"></i> Start <br />
                                    <span class="text-dark fw-medium">@item.StartDate.ToShortDateString()</span>
                                </div>
                                <div class="col-6 text-end">
                                    <i class="bi bi-calendar2-check"></i> End <br />
                                    <span class="text-dark fw-medium">@item.EndDate.ToShortDateString()</span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0 d-flex justify-content-around pb-3 px-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #6c5ce7; background-color: #f1f0ff; border-radius: 8px;">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #0fbcf9; background-color: #e0f7ff; border-radius: 8px;">
                                <i class="bi bi-info-circle"></i> Info
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm px-3" style="color: #ff5e57; background-color: #fff0ef; border-radius: 8px;">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">