@model ZhrCare.Models.Patient
@{ ViewData["Title"] = "Edit Patient"; }

<div class="zhr-page-wrapper">
    <div class="container">
        <h1 class="zhr-hero-title">Edit Patient</h1>
        <p class="zhr-subtitle">Update information for @Model.Name</p>

        <div class="zhr-card shadow-sm mx-auto" style="max-width: 600px;">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CaregiverId" />
                <input type="hidden" asp-for="AccessToken" />
                <input type="hidden" asp-for="CreatedAt" />
                
                <div class="mb-4">
                    <label asp-for="Name" class="zhr-label">Full Name</label>
                    <input asp-for="Name" class="form-control zhr-input" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Age" class="zhr-label">Age</label>
                    <input asp-for="Age" class="form-control zhr-input" />
                    <span asp-validation-for="Age" class="text-danger small"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-zhr-main flex-grow-1">Save Changes</button>
                    <a asp-action="Index" class="btn btn-light rounded-pill px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}