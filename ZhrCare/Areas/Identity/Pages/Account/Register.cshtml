@page
@model RegisterModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sign Up";
}

<div class="auth-page">
    <div class="auth-card text-center">
        <h2 class="mb-2">Join ZhrCare</h2>
        <p class="subtitle">Start your journey in compassionate caregiving</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small" role="alert"></div>

            <div class="form-floating mb-3 text-start">
                <input asp-for="Input.FullName" class="form-control" placeholder="Full Name"/>
                <label asp-for="Input.FullName">Full Name</label>
                <span asp-validation-for="Input.FullName" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3 text-start">
                <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                <label asp-for="Input.Email">Email Address</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="row g-2">
                <div class="col-md-6">
                    <div class="form-floating mb-3 text-start">
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password"/>
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3 text-start">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control"
                               placeholder="Confirm"/>
                        <label asp-for="Input.ConfirmPassword">Confirm</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-auth w-100 mt-3">Create Account</button>
        </form>

        <p class="mt-4 small text-muted">
            Already have an account?
            <a asp-page="./Login" class="fw-bold text-decoration-none" style="color: var(--zhr-text);">Sign in here</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}