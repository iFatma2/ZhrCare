@model ZhrCare.Models.MemoryRecord

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0" style="border-radius: 15px;">
                <div class="card-header text-white text-center" style="background-color: #6c5ce7; border-radius: 15px 15px 0 0;">
                    <h4 class="mb-0">ðŸ“¸ Add New Memory</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PatientId" value="@ViewBag.PatientId" />
                        
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Caption / Description</label>
                            <textarea asp-for="Caption" class="form-control" placeholder="Describe this memory..." rows="2"></textarea>
                            <span asp-validation-for="Caption" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Upload Photo</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Upload Audio Message</label>
                            <input type="file" name="audioFile" class="form-control" accept="audio/*" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white btn-lg" style="background-color: #6c5ce7;">Save Memory</button>
                            <a asp-action="Index" asp-route-patientId="@ViewBag.PatientId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>