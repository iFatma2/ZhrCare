@model IEnumerable<ZhrCare.Models.Medication>

@{
    ViewData["Title"] = "Daily Schedule";
}

<div class="zhr-page-wrapper">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="zhr-hero-title" style="font-size: 52px;">Daily Schedule</h1>
            <p class="zhr-subtitle">
                Care plan for <span class="fw-bold" style="color: var(--zhr-brand);">@ViewBag.PatientName</span> 
                <br />
                <span class="small opacity-75">@DateTime.Today.ToString("dddd, dd MMMM yyyy")</span>  
            </p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                
                @if (!Model.Any())
                {
                    <div class="zhr-card text-center p-5">
                        <i class="bi bi-sun fs-1 mb-3 d-block" style="color: var(--zhr-accent);"></i>
                        <h5 class="font-heading fw-bold">No medications scheduled</h5>
                        <p class="text-muted small">Everything looks clear for today.</p>
                    </div>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        var isTaken = item.MedicationLogs?.Any(l => l.TakenDate.Date == DateTime.Today) ?? false;

                        <div class="zhr-card mb-3 p-0 overflow-hidden shadow-sm" 
                             style="border-left: 6px solid @(isTaken ? "#A8D5BA" : "#8ab6d6") !important; border-radius: 20px;">
                            
                            <div class="p-4 d-flex justify-content-between align-items-center bg-white">
                                <div class="d-flex align-items-center">
                                    <div class="me-4 text-center" style="min-width: 80px; border-right: 1px solid #f0f0f0;">
                                        <i class="bi @(isTaken ? "bi-check-circle-fill" : "bi-capsule-pill") fs-3" 
                                           style="color: @(isTaken ? "#A8D5BA" : "#8ab6d6")"></i>
                                        <div class="small fw-bold mt-1 text-dark">@item.ScheduledTime.ToString("hh:mm tt")</div>
                                    </div>

                                    <div>
                                        <h4 class="mb-1 @(isTaken ? "text-decoration-line-through text-muted" : "fw-bold")" 
                                            style="font-family: var(--font-body); font-size: 1.1rem; color: #333;">
                                            @item.Name
                                        </h4>
                                        <div class="small text-muted">
                                            Dose: <span class="fw-bold">@item.Dosage</span>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <form asp-action="MarkAsTaken" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="medicationId" value="@item.Id" />
                                        <input type="hidden" name="patientId" value="@ViewBag.PatientId" />

                                        @if (isTaken)
                                        {
                                            @* زر عند الحالة "تم الأخذ" - يظهر كعلامة صح قابلة للضغط لإلغاء التحديد *@
                                            <button type="submit" class="btn d-flex align-items-center text-success fw-bold small bg-light px-3 py-2 rounded-pill border-0 shadow-none">
                                                <i class="bi bi-check-lg me-2"></i> Taken
                                            </button>
                                        }
                                        else
                                        {
                                            @* زر عند الحالة "لم يتم الأخذ" *@
                                            <button type="submit" class="btn px-4 py-2 shadow-sm rounded-pill text-white border-0" 
                                                    style="background-color: #8ab6d6; font-weight: 600; font-size: 0.9rem;">
                                                Mark Taken
                                            </button>
                                        }
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }

                <div class="text-center mt-5">
                    <a asp-action="Index" class="btn btn-link text-decoration-none" style="color: #8ab6d6; font-weight: 700;">
                        <i class="bi bi-arrow-left me-2"></i> Back to Patient List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>