@model ZhrCare.Models.Patient
@{ ViewData["Title"] = "Delete Patient"; }

<div class="zhr-page-wrapper">
    <div class="container text-center">
        <h1 class="zhr-hero-title text-danger">Remove Patient?</h1>
        <p class="zhr-subtitle">This action cannot be undone. All records for @Model.Name will be lost.</p>

        <div class="zhr-card mx-auto text-start" style="max-width: 600px; border-top: 5px solid #ff5e57;">
            <div class="info-row">
                <div class="info-label">Name</div>
                <div class="info-value">@Model.Name</div>
            </div>
            <div class="info-row">
                <div class="info-label">Age</div>
                <div class="info-value">@Model.Age</div>
            </div>

            <form asp-action="Delete" class="mt-4 text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-zhr-danger px-5">Confirm Delete</button>
                <div class="mt-3">
                    <a asp-action="Index" class="text-muted text-decoration-none small">Cancel and go back</a>
                </div>
            </form>
        </div>
    </div>
</div>