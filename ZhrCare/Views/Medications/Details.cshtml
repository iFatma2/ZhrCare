@model ZhrCare.Models.Medication
@{ ViewData["Title"] = "Medication Details"; }

<div class="zhr-page-wrapper">
    <div class="container">
        <h1 class="zhr-hero-title">Medication Info</h1>
        <p class="zhr-subtitle">Schedule for @Model.Patient.Name</p>

        <div class="zhr-card mx-auto" style="max-width: 700px;">
            <div class="info-row">
                <div class="info-label">Medication</div>
                <div class="info-value fw-bold">@Model.Name</div>
            </div>
            <div class="info-row">
                <div class="info-label">Dosage</div>
                <div class="info-value"><span class="badge bg-light text-dark border">@Model.Dosage</span></div>
            </div>
            <div class="info-row">
                <div class="info-label">Frequency</div>
                <div class="info-value">@Model.FrequencyType @(Model.FrequencyType == "Weekly" ? $"({Model.SelectedDays})" : "")</div>
            </div>
            <div class="info-row">
                <div class="info-label">Dose Time</div>
                <div class="info-value">@Model.ScheduledTime.ToString("hh:mm tt")</div>
            </div>
            <div class="info-row">
                <div class="info-label">Duration</div>
                <div class="col-sm-10"> @Model.StartDate.ToString("dd/MM/yyyy") â€”  @Model.EndDate.ToString("dd/MM/yyyy") </div>
            </div>

            <div class="mt-5 d-flex gap-3 justify-content-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-zhr-main px-5">Edit</a>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-5">Back to List</a>
            </div>
        </div>
    </div>
</div>