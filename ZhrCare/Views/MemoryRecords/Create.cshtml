@model ZhrCare.Models.MemoryRecord
@{ ViewData["Title"] = "Add Memory"; }

<div class="zhr-page-wrapper">
    <div class="container">
        <h1 class="zhr-hero-title">Add New Memory</h1>
        <p class="zhr-subtitle">Capture a special moment for your patient</p>

        <div class="zhr-card mx-auto" style="max-width: 600px;">
            <form asp-action="Create" enctype="multipart/form-data">
                <input type="hidden" asp-for="PatientId" value="@ViewBag.PatientId" />
                
                <div class="mb-4">
                    <label class="zhr-label">Caption / Description</label>
                    <textarea asp-for="Caption" class="form-control zhr-input" placeholder="What happened in this moment?" rows="3"></textarea>
                    <span asp-validation-for="Caption" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="zhr-label">Photo Attachment</label>
                    <input type="file" name="imageFile" class="form-control zhr-input" accept="image/*" />
                </div>

                <div class="mb-4">
                    <label class="zhr-label">Voice Message (Optional)</label>
                    <input type="file" name="audioFile" class="form-control zhr-input" accept="audio/*" />
                </div>

                <div class="d-flex gap-2 mt-5">
                    <button type="submit" class="btn btn-zhr-main flex-grow-1">Save Memory</button>
                    <a asp-action="Index" asp-route-patientId="@ViewBag.PatientId" class="btn btn-light rounded-pill px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}