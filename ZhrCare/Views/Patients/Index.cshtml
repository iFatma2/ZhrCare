@model IEnumerable<ZhrCare.Models.Patient>
@{ ViewData["Title"] = "Patient List"; }

<div class="zhr-page-wrapper">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-5">
            <div>
                <h1 class="zhr-hero-title text-start mb-0">Patient List</h1>
                <p class="text-muted mb-0">Manage and monitor your care circle</p>
            </div>
            <a asp-action="Create" class="btn btn-zhr-main">
                <i class="bi bi-person-plus"></i> New Patient
            </a>
        </div>

        <div class="zhr-card p-0 overflow-hidden">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                <tr>
                    <th class="py-3 px-4 border-0">PATIENT NAME</th>
                    <th class="py-3 border-0">AGE</th>
                    <th class="py-3 border-0 text-end px-4">OPERATIONS</th>
                </tr>
                </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">
                                    <i class="bi bi-person-exclamation fs-1 d-block mb-3 opacity-25"></i>
                                    <p>No patients added yet.</p>
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-4 px-4 align-middle fw-bold" style="color: var(--zhr-dark);">
                                    @item.Name
                                </td>
                                <td class="py-4 align-middle">
                                    <span class="badge bg-light text-dark border-0 px-3 py-2" style="border-radius: 8px;">@item.Age Years</span>
                                </td>
                                <td class="py-4 align-middle text-end px-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light rounded-pill px-3" title="Edit">
                                            <i class="bi bi-pencil-square me-1"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light rounded-pill px-3" title="Info">
                                            <i class="bi bi-info-circle me-1"></i> Info
                                        </a>
                                        
                                        <a asp-action="Schedule" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3" 
                                           style="border-color: var(--zhr-brand); color: var(--zhr-brand);">
                                            <i class="bi bi-calendar-check me-1"></i> Schedule
                                        </a>
                                        <a asp-controller="MemoryRecords" asp-action="Index" asp-route-patientId="@item.Id" 
                                           class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                                            <i class="bi bi-person-video me-1"></i> Memories
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        <a asp-action="PatientDashboard" asp-route-id="@item.Id" class="btn-action-circle" title="View Patient Dashboard">
                                            <i class="bi bi-speedometer2" style="color: var(--zhr-brand);"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
            </table>
        </div>
    </div>
</div>