@model ZhrCare.Models.MemoryRecord

<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 p-4" style="border-radius: 15px;">
                <div class="text-danger mb-3">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
                </div>
                <h3 class="fw-bold">Are you sure?</h3>
                <p class="text-muted">This action will permanently delete this memory: <br><strong>"@Model.Caption"</strong></p>
                
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4" style="border-radius: 10px;">Delete Forever</button>
                    </form>
                    <a asp-action="Index" asp-route-patientId="@Model.PatientId" class="btn btn-light px-4" style="border-radius: 10px;">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>


