@model ZhrCare.Models.Medication
@{
    ViewData["Title"] = "Edit Medication";
}

<div class="zhr-page-wrapper">
    <div class="container">
        <h1 class="zhr-hero-title">Edit Medication</h1>
        <p class="zhr-subtitle">Modify the schedule for <span class="fw-bold">@Model.Patient?.Name</span></p>

        <div class="zhr-card mx-auto" style="max-width: 900px;">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label asp-for="PatientId" class="zhr-label">Patient</label>
                            <select asp-for="PatientId" class="form-select zhr-input" asp-items="ViewBag.PatientId"></select>
                            <span asp-validation-for="PatientId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Name" class="zhr-label">Medication Name</label>
                            <input asp-for="Name" class="form-control zhr-input" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FrequencyType" class="zhr-label">Frequency</label>
                            <select asp-for="FrequencyType" id="FrequencyType" class="form-select zhr-input">
                                <option value="Daily">Daily</option>
                                <option value="Weekly">Weekly</option>
                                <option value="Monthly">Monthly</option>
                            </select>
                        </div>

                        <div class="mb-4" id="weeklyDaysSection" style="@(Model.FrequencyType == "Weekly" ? "" : "display:none;")">
                            <label class="zhr-label">Selected Days</label>
                            <div class="d-flex flex-wrap gap-2 p-3 border rounded-3 bg-light">
                                @{
                                    var allDays = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
                                    var savedDays = Model.SelectedDays?.Split(", ").ToList() ?? new List<string>();
                                    foreach (var day in allDays)
                                    {
                                        <div class="form-check me-2">
                                            <input class="form-check-input day-checkbox" type="checkbox" value="@day" id="day_@day" 
                                                   @(savedDays.Contains(day) ? "checked" : "")>
                                            <label class="form-check-label small" for="day_@day">@day</label>
                                        </div>
                                    }
                                }
                            </div>
                            <input type="hidden" asp-for="SelectedDays" id="SelectedDaysHidden" value="@Model.SelectedDays" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-4">
                            <label asp-for="Dosage" class="zhr-label">Dosage</label>
                            <input asp-for="Dosage" class="form-control zhr-input" />
                            <span asp-validation-for="Dosage" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ScheduledTime" class="zhr-label">Dose Time</label>
                            <input asp-for="ScheduledTime" type="time" class="form-control zhr-input" />
                            <span asp-validation-for="ScheduledTime" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div class="mb-4">
                                    <label asp-for="StartDate" class="zhr-label">Start Date</label>
                                    <input asp-for="StartDate" type="date" class="form-control zhr-input" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-4">
                                    <label asp-for="EndDate" class="zhr-label">End Date</label>
                                    <input asp-for="EndDate" type="date" class="form-control zhr-input" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-zhr-main flex-grow-1">Update Medication</button>
                    <a asp-action="Index" class="btn btn-light rounded-pill px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            function updateSelectedDays() {
                var selectedDays = [];
                $('.day-checkbox:checked').each(function () {
                    selectedDays.push($(this).val());
                });
                $('#SelectedDaysHidden').val(selectedDays.join(', '));
            }

            $('.day-checkbox').on('change', function () {
                updateSelectedDays();
            });

            $('#FrequencyType').on('change', function () {
                if ($(this).val() === 'Weekly') {
                    $('#weeklyDaysSection').slideDown();
                } else {
                    $('#weeklyDaysSection').slideUp();
                    $('.day-checkbox').prop('checked', false); 
                    updateSelectedDays();
                }
            });
        });
    </script>
}