<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ZhrCare</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-flower1" style="color: var(--zhr-brand);"></i> ZhrCare
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <i class="bi bi-list fs-2"></i>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Patients" asp-action="Index">Patients</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Routines" asp-action="Index">Routines</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Medications" asp-action="Index">Meds</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="MemoryRecords" asp-action="Index">Memories</a></li>
                </ul>
                <div class="d-flex align-items-center">
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>
    </nav>
</header>

<main role="main">
    @RenderBody()
</main>

<footer class="mt-auto py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-4 text-center text-md-start mb-4 mb-md-0">
                <a class="navbar-brand fs-4 mb-2 d-block text-decoration-none" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-flower1" style="color: var(--zhr-brand);"></i> ZhrCare
                </a>
                <p class="small text-muted mb-0">Compassionate digital care for your loved ones.</p>
            </div>

            <div class="col-md-8 text-center text-md-end">
                <div class="footer-links mb-3">
                    <a href="#" class="text-decoration-none text-muted small px-3">Support</a>
                    <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted small px-3">Privacy Policy</a>
                    <a href="#" class="text-decoration-none text-muted small px-3">Terms</a>
                </div>
                <div class="small text-muted opacity-75">
                    &copy; 1447 - ZhrCare. Built with <i class="bi bi-heart-fill" style="color: var(--zhr-accent);"></i> for Caregivers.
                </div>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>