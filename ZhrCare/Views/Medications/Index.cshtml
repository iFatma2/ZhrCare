@model IEnumerable<ZhrCare.Models.Medication>
@{ ViewData["Title"] = "Medications Management"; }

<div class="zhr-page-wrapper">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-5">
            <div>
                <h1 class="zhr-hero-title text-start mb-0">Medications</h1>
                <div class="d-flex align-items-center gap-3">
                    <p class="text-muted mb-0">Manage daily dosage and schedules</p>
                    <form method="get" class="m-0">
                        <select name="selectedPatientId" onchange="this.form.submit()" class="form-select form-select-sm border-0 bg-light shadow-sm" style="border-radius: 10px; width: 160px;">
                            <option value="">All Patients</option>
                            @foreach (var p in ViewBag.AllPatients) {
                                <option value="@p.Id" selected="@(ViewBag.SelectedPatientId == p.Id)">@p.Name</option>
                            }
                        </select>
                    </form>
                </div>
            </div>
                <a asp-action="Create" class="btn btn-zhr-main">
                    <i class="bi bi-plus-lg"></i> Add New Medication
                </a>
            </div>
        
        @if (!Model.Any()) {
            <div class="zhr-card text-center p-5">
                <i class="bi bi-capsule-pill fs-1 mb-3 d-block opacity-25"></i>
                <p class="text-muted">No medication schedules found. Start by adding one.</p>
            </div>
        } else {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="zhr-card h-100 p-0 overflow-hidden shadow-sm border-0 d-flex flex-column" style="border-top: 5px solid var(--zhr-brand) !important;">
                            
                            <div class="p-4 d-flex flex-column flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="fw-bold mb-0 text-truncate" style="color: var(--zhr-dark); max-width: 150px;">@item.Name</h5>
                                    <span class="badge bg-light text-dark border px-2 py-1" style="font-size: 0.75rem;">@item.Dosage</span>
                                </div>
                                
                                <p class="small text-muted mb-3">
                                    <i class="bi bi-person-circle me-1"></i> Patient: <span class="fw-bold text-dark">@item.Patient.Name</span>
                                </p>

                                <div class="p-3 rounded-3 mb-3" style="background-color: var(--zhr-bg-light); border-left: 4px solid var(--zhr-brand); min-height: 80px;">
                                    <div class="small mb-1 text-dark"><strong>Frequency:</strong> @item.FrequencyType</div>
                                    
                                    @if (item.FrequencyType == "Weekly")
                                    {
                                        <div class="small mb-1 text-muted" style="line-height: 1.3;">
                                            <strong>Days:</strong> @item.SelectedDays
                                        </div>
                                    }
                                    <div class="small text-dark"><strong>Time:</strong> @item.ScheduledTime.ToString("hh:mm tt")</div>
                                </div>

                                <div class="row g-0 mt-auto pt-3 border-top small text-muted">
                                    <div class="col-6">
                                        <i class="bi bi-calendar-event"></i> Start<br />
                                        <span class="text-dark fw-bold">@item.StartDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="col-6 text-end">
                                        <i class="bi bi-calendar-check"></i> End<br />
                                        <span class="text-dark fw-bold">@item.EndDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="p-3 bg-light d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white bg-white border rounded-pill px-3">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white bg-white border rounded-pill px-3">Info</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill"><i class="bi bi-trash"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>