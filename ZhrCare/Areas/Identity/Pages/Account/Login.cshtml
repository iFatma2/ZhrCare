@page
@model LoginModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sign In";
}

<div class="auth-page">
    <div class="auth-card text-center">
        <div class="auth-logo">
            <i class="bi bi-flower1"></i>
        </div>
        <h2>Welcome back</h2>
        <p class="subtitle">Enter your details to access your account</p>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small" role="alert"></div>

            <div class="form-floating mb-3 text-start">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <label asp-for="Input.Email">Email Address</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3 text-start">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4 px-1">
                <div class="form-check small">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label opacity-75" asp-for="Input.RememberMe">Remember me</label>
                </div>
                <a asp-page="./ForgotPassword" class="small text-decoration-none" style="color: var(--zhr-accent);">Forgot?</a>
            </div>

            <button type="submit" class="btn btn-auth w-100">Sign In</button>
        </form>

        <p class="mt-4 small text-muted">
            New to ZhrCare? 
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none" style="color: var(--zhr-text);">Create account</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}