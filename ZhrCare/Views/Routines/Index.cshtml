@model IEnumerable<ZhrCare.Models.Routine>
@{ ViewData["Title"] = "Daily Routines"; }

<div class="zhr-page-wrapper">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-5">
            <div>
                <h1 class="zhr-hero-title text-start mb-0">Daily Routines</h1>
                <div class="d-flex align-items-center gap-3">
                    <p class="text-muted mb-0">Track exercises, meals, and daily activities</p>
                    <form method="get" class="m-0">
                        <select name="selectedPatientId" onchange="this.form.submit()" class="form-select form-select-sm border-0 bg-light shadow-sm" style="border-radius: 10px; width: 160px;">
                            <option value="">All Patients</option>
                            @foreach (var p in ViewBag.AllPatients)
                            {
                                <option value="@p.Id" selected="@(ViewBag.SelectedPatientId == p.Id)">@p.Name</option>
                            }
                        </select>
                    </form>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-zhr-main">
                <i class="bi bi-plus-lg"></i> Add New Routine
            </a>
        </div>

        @if (!Model.Any()) {
            <div class="zhr-card text-center p-5">
                <i class="bi bi-calendar-check fs-1 mb-3 d-block opacity-25"></i>
                <p class="text-muted">No routines scheduled yet.</p>
            </div>
        } else {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var item in Model) {
                    <div class="col">
                        <div class="zhr-card h-100 p-0 overflow-hidden shadow-sm border-0 d-flex flex-column" style="border-top: 5px solid var(--zhr-brand) !important;">
                            <div class="p-4 d-flex flex-column flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="fw-bold mb-0 text-truncate" style="color: var(--zhr-dark); max-width: 70%;">@item.ActivityName</h5>
                                    @if (item.IsCompleted) {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Completed</span>
                                    } else {
                                        <span class="badge bg-warning-subtle text-dark border border-warning-subtle rounded-pill">Pending</span>
                                    }
                                </div>
                                
                                <p class="small text-muted mb-4">
                                    <i class="bi bi-person-circle me-1"></i> Patient: <span class="fw-bold text-dark">@(item.Patient?.Name ?? "N/A")</span>
                                </p>

                                <div class="p-3 rounded-3 mb-3" style="background-color: var(--zhr-bg-light); border-left: 4px solid var(--zhr-brand); min-height: 80px;">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-alarm me-2 text-brand" style="font-size: 1.2rem;"></i>
                                        <div>
                                            <span class="text-uppercase small fw-bold text-secondary d-block" style="font-size: 0.65rem;">Scheduled Time</span>
                                            <span class="text-dark fw-bold">@item.Time.ToString("hh:mm tt")</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-auto pt-3 border-top small text-muted">
                                    <i class="bi bi-calendar-event"></i> Date: 
                                    <span class="text-dark fw-bold">@item.Time.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>

                            <div class="p-3 bg-light d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white bg-white border rounded-pill px-3 shadow-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white bg-white border rounded-pill px-3 shadow-sm">Info</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white bg-white border rounded-pill px-2 shadow-sm"><i class="bi bi-trash text-danger"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>