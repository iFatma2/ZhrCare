@model ZhrCare.Models.Routine
@{ ViewData["Title"] = "Routine Details"; }

<div class="zhr-page-wrapper">
    <div class="container">
        <h1 class="zhr-hero-title">Routine Details</h1>
        <p class="zhr-subtitle">Activity info for <span class="text-brand fw-bold">@Model.Patient?.Name</span></p>

        <div class="zhr-card mx-auto shadow-sm" style="max-width: 650px;">
            <div class="info-row">
                <div class="info-label">Activity</div>
                <div class="info-value fw-bold">@Model.ActivityName</div>
            </div>
            <div class="info-row">
                <div class="info-label">Status</div>
                <div class="info-value">
                    @if (Model.IsCompleted) {
                        <span class="badge bg-success-subtle text-success border border-success-subtle px-3">Completed</span>
                    } else {
                        <span class="badge bg-warning-subtle text-dark border border-warning-subtle px-3">Pending</span>
                    }
                </div>
            </div>
            <div class="info-row">
                <div class="info-label">Time</div>
                <div class="info-value">@Model.Time.ToString("hh:mm tt")</div>
            </div>
            <div class="info-row">
                <div class="info-label">Date</div>
                <div class="info-value">@Model.Time.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="info-row border-0">
                <div class="info-label">Patient</div>
                <div class="info-value">@Model.Patient?.Name</div>
            </div>

            <div class="mt-5 d-flex gap-3 justify-content-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-zhr-main px-5">Edit</a>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-5">Back to List</a>
            </div>
        </div>
    </div>
</div>